%h2= @album.title

%p= @album.description
%p= "#{@album.photos.size} photos"


- if @albums.size > 0
  %h3 Subalbums

  #albums
    - @albums.each do |album|
      %h3= link_to album.title, url("albums/#{ album.path }")
      %p= album.description
      %p= "#{album.photos.size} photos"
      
#album_photos
  - @album.photos.each do |photo|
    .thumb
      %img{:src => url(photo.src_path(:thumb))}
